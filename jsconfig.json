{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@schema/*": [
        "src/schemas/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@world2d/*": [
        "src/game/world2d/*"
      ],
      "@components/*": [
        "src/game/world2d/definitions/components/*"
      ],
      "@entities/*": [
        "src/game/world2d/definitions/entities/*"
      ],
      "@definitions/*": [
        "src/game/world2d/definitions/*"
      ],
      "@systems/*": [
        "src/game/world2d/systems/*"
      ]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}